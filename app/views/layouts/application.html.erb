<!DOCTYPE html>
<html>
  <head>
    <title>DogWorker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if customer_signed_in? %>
     <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>
     <li><%= link_to "その他", customers_path %></li>
     <li><%= link_to "ホーム", root_path %></li>
    <% else %>
     <li><%=link_to "会員登録", new_customer_registration_path %></li>
     <li><%=link_to "ログイン", new_customer_session_path %></li>

    <% end %>
    <%= yield %>
  </body>
</html>
