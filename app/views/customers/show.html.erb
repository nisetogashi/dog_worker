<h1>プロフィール</h1>

<%= link_to "プロフィール編集", edit_customer_path(@customer) %></br>
<%#= link_to "カレンダー入力", calendar_path(@calendar.id) %>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <td>
        <% @customer.images.each do |image|%>
          <%= image_tag image, size: 10*10 %>
        <% end %>
      </td>
    </tr>
    <tr><th>ニックネーム</th>   <td><%= @customer.nickname %></td></tr>
    <tr><th>性別</th>           <td><%= @customer.sex %></td></tr>
    <tr><th>職業</th>           <td><%= @customer.professtion %></td></tr>
    <tr><th>説明文</th>         <td><%= @customer.introduction %></td></tr>
  </thead>
</table>

<div class="container">
  <div class="row">
    <div class="col-12 text-center title">
      <h1>マイページ</h1>
    </div>
    <div class="col-12 mt-3 text-center content">
      <div>
        <label><strong>名前：</strong></label>
        <p style="display:inline;"><%= @customer.name %></p>
      </div>
      <div>
        <label><strong>メールアドレス：</strong></label>
        <p style="display:inline;"><%= @customer.email %></p>
      </div>
      <div class="col-12 mt-3 text-center mx-auto">
        <h3>予約一覧</h3>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">予約日</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @customer_reservations.each do |customer_reservation| %>
              <td>
                <%= customer_reservation.day %>
                <%= customer_reservation.time %>              
              </td>
              <td>
                <%= link_to '削除', reservation_path(customer_reservation.id), method: :delete, data: { confirm: "削除してよろしいですか？", commit: "削除する", cancel: "やめる", title: "ご確認ください" } %>
              </td>
            </tr>             
            <% end %>
            <% if @customer_reservations.blank? %>
              <tr>
                <td>予約はありません。</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-12 mt-3 text-center mx-auto">
        <h3>来院履歴</h3>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">予約日</th>
            </tr>
          </thead>
          <tbody>
            <% @visit_historys.each do |visit_history| %>
              <tr>
                <td>
                  <%= visit_history.day %>
                  <%= visit_history.time %>              
                </td>
              </tr>
            <% end %>
            <% if @visit_historys.blank? %>
              <tr>
                <td>来院履歴はありません。</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>